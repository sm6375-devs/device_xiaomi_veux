# Allow hal_power_default to write to dt2w node
allow hal_power_default proc_touchpanel:dir search;
allow hal_power_default proc_touchpanel:file rw_file_perms;

r_dir_file(hal_power_default, input_device)

allow hal_power_default {
  vendor_sysfs_devfreq
  sysfs_msm_subsys
}:dir search;

allow hal_power_default {
  cgroup
  proc
  vendor_sysfs_devfreq
  sysfs_devices_system_cpu
  vendor_sysfs_graphics
  vendor_sysfs_kgsl
  sysfs_msm_subsys
  vendor_sysfs_scsi_host 
  sysfs
}:{
  file
  lnk_file
} rw_file_perms;

allow hal_power_default vendor_latency_device:chr_file rw_file_perms;

# Rule for hal_power_default to access graphics composer process
unix_socket_connect(hal_power_default, vendor_pps, hal_graphics_composer_default);

# To get/set powerhal state property
set_prop(hal_power_default, vendor_power_prop)

# Allow hal_power_default to use capability 21 (SYS_ADMIN)
allow hal_power_default self:capability sys_admin;

# Allow hal_power_default to use the DAC_OVERRIDE capability
allow hal_power_default self:capability dac_override;

# Allow hal_power_default to write to the clkgate_enable file in sysfs
allow hal_power_default sysfs:file write { getattr open read write };
